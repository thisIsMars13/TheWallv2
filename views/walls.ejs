<form method="post" id="create-post-form">
    <h1>Say something</h1>
    <textarea name="message" id="create-post-textarea" cols="60" rows="10" placeholder="Say something.."></textarea>
    <button>Create Post</button>
</form>

<div>
    <ul id="posts-lists">
        <% posts?.length && posts.forEach(post => { %> 
            <%- include('post', {post}) %> 
        <%  });  %> 
    </ul>
</div>